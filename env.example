# Supabase Configuration
# Use publishable keys instead of anon keys for better security
# This key is safe to use in browser when Row Level Security (RLS) is enabled
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_publishable_key

# App URL (for referral links)
NEXT_PUBLIC_APP_URL=https://tiwiprotocol.com

# ============================================================================
# Hardhat Deployment Configuration
# ============================================================================

# Deployer Private Key (NEVER commit this to git!)
# Format: 0x... (64 hex characters)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# RPC URLs for Mainnet Networks
MAINNET_RPC_URL=https://eth.llamarpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org
OPTIMISM_RPC_URL=https://mainnet.optimism.io
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Testnet RPC (for testing)
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Block Explorer API Keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
OPTIMISM_API_KEY=your_optimism_api_key
SNOWTRACE_API_KEY=your_snowtrace_api_key

# ============================================================================
# Contract Deployment Parameters
# ============================================================================

# Token Addresses (for deployment)
STAKING_TOKEN_ADDRESS=0x... # Address of ERC20 token users will stake
REWARD_TOKEN_ADDRESS=0x... # Address of ERC20 token for rewards (can be same as staking token)
OWNER_ADDRESS=0x... # Address that will own the contract (admin)

# Pool Configuration (for configure-pool.ts script)
CONTRACT_ADDRESS=0x... # Address of deployed contract
POOL_REWARD=10000 # Total reward tokens (in token units, not wei)
REWARD_DURATION_DAYS=30 # Duration in days
MAX_TVL=100000 # Maximum TVL or Total Staked Tokens (in token units, not wei)
REWARD_TOKEN_DECIMALS=18 # Decimals of reward token
STAKING_TOKEN_DECIMALS=18 # Decimals of staking token

# Gas Configuration (optional)
GAS_PRICE=20000000000 # Gas price in wei (optional, will use network default if not set)

